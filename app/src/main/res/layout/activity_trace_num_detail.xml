<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_trace_num_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_white"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_wanfa_logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:adjustViewBounds="true"
                    android:padding="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_wanfa_name"
                        style="@style/bet_bill_detail_label" />

                    <TextView
                        android:id="@+id/tv_issue_num"
                        style="@style/bet_bill_sub_label"
                        android:text="@string/some_issue_trace_num" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_bet_money"
                        style="@style/bet_bill_detail_label_value"
                        android:text="@string/money_with_sign" />

                    <TextView
                        android:id="@+id/tv_bet_time"
                        style="@style/bet_bill_sub_label"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/horizontalLine"
                android:layout_marginStart="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_white"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    style="@style/bet_bill_detail_label"
                    android:layout_marginEnd="15dp"
                    android:text="@string/trace_num_order" />

                <TextView
                    android:id="@+id/tv_trace_num_order"
                    style="@style/bet_bill_detail_label"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_copy_order_num"
                    style="@style/bet_bill_detail_label"
                    android:text="@string/copy"
                    android:textColor="@color/light_blue" />
            </LinearLayout>

            <View
                style="@style/horizontalLine"
                android:layout_marginStart="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_white"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    style="@style/bet_bill_detail_label"
                    android:layout_marginEnd="15dp"
                    android:text="@string/trace_num_case" />

                <TextView
                    android:id="@+id/tv_trace_num_case"
                    style="@style/bet_bill_detail_label_value"
                    android:textColor="@color/color_333" />
            </LinearLayout>

            <View
                style="@style/horizontalLine"
                android:layout_marginStart="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_white"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    style="@style/bet_bill_detail_label"
                    android:layout_marginEnd="15dp"
                    android:text="@string/trace_progress" />

                <TextView
                    android:id="@+id/tv_trace_num_progress"
                    style="@style/bet_bill_detail_label_value"
                    android:textColor="@color/color_333" />
            </LinearLayout>

            <View
                style="@style/horizontalLine"
                android:layout_marginStart="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_white"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    style="@style/bet_bill_detail_label"
                    android:layout_marginEnd="15dp"
                    android:text="@string/trace_num_money" />

                <TextView
                    android:id="@+id/tv_trace_num_money"
                    style="@style/bet_bill_detail_label_value"
                    android:textColor="@color/color_333" />
            </LinearLayout>

            <View
                style="@style/horizontalLine"
                android:layout_marginStart="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_white"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    style="@style/bet_bill_detail_label"
                    android:layout_marginEnd="15dp"
                    android:text="@string/delivery_prize" />

                <TextView
                    android:id="@+id/tv_delivery_prize"
                    style="@style/bet_bill_detail_label"
                    android:textColor="@color/light_red" />
            </LinearLayout>

            <View
                style="@style/horizontalLine"
                android:layout_marginStart="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_white"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    style="@style/bet_bill_detail_label"
                    android:layout_marginEnd="15dp"
                    android:text="@string/prize_immediate_stop" />

                <TextView
                    android:id="@+id/tv_prize_immediate_stop"
                    style="@style/bet_bill_detail_label" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/Grey_100" />

            <TextView
                style="@style/bet_bill_detail_label"
                android:layout_width="match_parent"
                android:background="@color/text_white"
                android:padding="15dp"
                android:text="@string/trace_num_record" />

            <View style="@style/horizontalLine" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_bet_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/Grey_100" />

</LinearLayout>
