<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.agentcenter.AgentCenterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_security_center_top_bg"
        android:orientation="vertical">

        <include layout="@layout/layout_top_bar_nobg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    style="@style/tv_agent_center_top"
                    android:text="@string/my_subordinate" />

                <TextView
                    android:id="@+id/tv_my_subordinate_person"
                    style="@style/tv_agent_center_top"
                    android:layout_marginTop="2dp"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_add_up_return_commission"
                    style="@style/tv_agent_center_top"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_return_commission_detail"
                style="@style/tv_agent_center_top"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_agent_center_right_bg"
                android:text="@string/return_commission_detail" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_red"
        android:orientation="horizontal">

        <com.sp.xwjlibrary.widget.DoubleTextView
            android:id="@+id/dtv_yesterday_return_commission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            app:drawableSpace="@drawable/divide_space_dm3"
            app:oneColor="@android:color/white"
            app:oneSize="10"
            app:oneText="@string/yesterday_return_commission"
            app:orientation="vertical"
            app:twoColor="@android:color/white"
            app:twoSize="14" />

        <com.sp.xwjlibrary.widget.DoubleTextView
            android:id="@+id/dtv_today_return_commission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            app:drawableSpace="@drawable/divide_space_dm3"
            app:oneColor="@android:color/white"
            app:oneSize="10"
            app:oneText="@string/today_return_commission"
            app:orientation="vertical"
            app:twoColor="@android:color/white"
            app:twoSize="14"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divide_space_dm10"
        android:orientation="vertical"
        android:showDividers="beginning|middle|end">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divide_space_dm10"
            android:orientation="horizontal"
            android:showDividers="beginning|middle|end">

            <LinearLayout
                android:id="@+id/lly_agent_introduction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_gray_side_white_bg_r3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/icon_agent_introduction" />

                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/agent_introduction" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lly_subordinate_opener"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_gray_side_white_bg_r3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/icon_subordinate_opener" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/subordinate_opener" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divide_space_dm10"
            android:orientation="horizontal"
            android:showDividers="beginning|middle|end">

            <LinearLayout
                android:id="@+id/lly_agent_report_forms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_gray_side_white_bg_r3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/icon_agent_report_forms" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/agent_report_forms" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lly_subordinate_manage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_gray_side_white_bg_r3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/icon_subordinate_manage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/subordinate_manage" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divide_space_dm10"
            android:orientation="horizontal"
            android:showDividers="beginning|middle|end">

            <LinearLayout
                android:id="@+id/lly_subordinate_bet_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_gray_side_white_bg_r3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/icon_subordinate_bet_detail" />

                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subordinate_bet_detail" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lly_subordinate_business_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_gray_side_white_bg_r3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/icon_subordinate_business_detail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/subordinate_business_detail" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>