<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.sp.xwjlibrary.widget.IconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:text="@string/icon_exclamatory_mark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/please_set_subordinate_type_return_point"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_look_return_point_report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/look_return_point_report"
                        android:textColor="@color/light_red"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/open_type" />

                    <RadioGroup
                        android:id="@+id/rg_opener_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:checkedButton="@id/rb_agent_type"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_agent_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/light_red"
                            android:tag="1"
                            android:text="@string/agent_type" />

                        <RadioButton
                            android:id="@+id/rb_player_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/light_red"
                            android:tag="2"
                            android:text="@string/player_type" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.sp.xwjlibrary.widget.IconEditClearView
                        android:id="@+id/iecv_kuai3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:clearIcon="@string/icon_clear"
                        app:inputBottomSpace="12dp"
                        app:inputLeftSpace="20dp"
                        app:inputType="number"
                        app:labelIcon="快3"
                        app:labelIconColor="@color/color_333"
                        app:labelIconSize="14"
                        app:textSize="14" />

                    <com.sp.xwjlibrary.widget.IconEditClearView
                        android:id="@+id/iecv_shishicai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:clearIcon="@string/icon_clear"
                        app:inputBottomSpace="12dp"
                        app:inputLeftSpace="20dp"
                        app:inputType="number"
                        app:labelIcon="时时彩"
                        app:labelIconColor="@color/color_333"
                        app:labelIconSize="14"
                        app:textSize="14" />

                    <com.sp.xwjlibrary.widget.IconEditClearView
                        android:id="@+id/iecv_11xuan5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:clearIcon="@string/icon_clear"
                        app:inputBottomSpace="12dp"
                        app:inputLeftSpace="20dp"
                        app:inputType="number"
                        app:labelIcon="11选5"
                        app:labelIconColor="@color/color_333"
                        app:labelIconSize="14"
                        app:textSize="14" />

                    <com.sp.xwjlibrary.widget.IconEditClearView
                        android:id="@+id/iecv_fucai3d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:clearIcon="@string/icon_clear"
                        app:inputBottomSpace="12dp"
                        app:inputLeftSpace="20dp"
                        app:inputType="number"
                        app:labelIcon="福彩3D"
                        app:labelIconColor="@color/color_333"
                        app:labelIconSize="14"
                        app:textSize="14" />

                    <com.sp.xwjlibrary.widget.IconEditClearView
                        android:id="@+id/iecv_pailie3_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:clearIcon="@string/icon_clear"
                        app:inputBottomSpace="12dp"
                        app:inputLeftSpace="20dp"
                        app:inputType="number"
                        app:labelIcon="排列3/5"
                        app:labelIconColor="@color/color_333"
                        app:labelIconSize="14"
                        app:textSize="14" />

                    <com.sp.xwjlibrary.widget.IconEditClearView
                        android:id="@+id/iecv_28"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:clearIcon="@string/icon_clear"
                        app:inputBottomSpace="12dp"
                        app:inputLeftSpace="20dp"
                        app:inputType="number"
                        app:labelIcon="28游戏"
                        app:labelIconColor="@color/color_333"
                        app:labelIconSize="14"
                        app:textSize="14" />

                    <com.sp.xwjlibrary.widget.IconEditClearView
                        android:id="@+id/iecv_pk10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:clearIcon="@string/icon_clear"
                        app:inputBottomSpace="12dp"
                        app:inputLeftSpace="20dp"
                        app:inputType="number"
                        app:labelIcon="PK10"
                        app:labelIconColor="@color/color_333"
                        app:labelIconSize="14"
                        app:textSize="14" />

                    <com.sp.xwjlibrary.widget.IconEditClearView
                        android:id="@+id/iecv_liuhecai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:clearIcon="@string/icon_clear"
                        app:inputBottomSpace="12dp"
                        app:inputLeftSpace="20dp"
                        app:inputType="number"
                        app:labelIcon="六合彩"
                        app:labelIconColor="@color/color_333"
                        app:labelIconSize="14"
                        app:showUnderline="false"
                        app:textSize="14" />

                    <com.sp.xwjlibrary.widget.IconEditClearView
                        android:id="@+id/iecv_dipincai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:clearIcon="@string/icon_clear"
                        app:inputBottomSpace="12dp"
                        app:inputLeftSpace="20dp"
                        app:inputType="number"
                        app:labelIcon="低频彩"
                        app:labelIconColor="@color/color_333"
                        app:labelIconSize="14"
                        app:showUnderline="false"
                        app:textSize="14" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_generate_invite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/selector_login"
                android:text="@string/generate_invite"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
