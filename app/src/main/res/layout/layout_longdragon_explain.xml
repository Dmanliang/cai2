<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:background="@drawable/shape_list"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/lll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_list2">

            <TextView
                android:id="@+id/explain_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="长龙说明"
                android:gravity="center"
                android:textColor="@color/text_white"
                android:textSize="15sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/explain_line"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/changlong_explain_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3dp"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="@color/text_black"
                    android:textCursorDrawable="@null"
                    android:layout_marginLeft="5dp"
                    android:text="长龙助手是对“快3”、“时时彩”以及“北京赛车”和“游 艇”的“大小单双”开奖结果进行统计监测，每期出现 “大、小、单、双”的概率为1/2,如果连续3期级以上的开奖结果相同,将称之为“长龙”,通常会采用倍投的方式进行“斩龙”或“顺龙”."
                    android:textSize="12sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:id="@+id/zhanlong_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/icon_zhanlong_tip"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:background="@drawable/ic_example"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/zhanglong_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="什么叫斩龙?"
                            android:textColor="@color/colorPrimary_500vip"
                            android:textSize="14dp"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/zhanglong_explain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3dp"
                        android:lineSpacingMultiplier="1.5"
                        android:textColor="@color/text_black"
                        android:textCursorDrawable="@null"
                        android:layout_below="@+id/zhanlong_layout"
                        android:layout_alignLeft="@+id/zhanlong_layout"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:text="如连续开6期“单”，可以选择“双”进行投注，这样的 投注方案称之为“斩龙”；"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <LinearLayout
                        android:id="@+id/shunlong_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/icon_shunlong_explain"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:background="@drawable/ic_example"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"/>
                        <TextView
                            android:id="@+id/text_shunlong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="什么叫顺龙?"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorPrimary_500vip"
                            android:textSize="14dp"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/shunlong_explain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3dp"
                        android:lineSpacingMultiplier="1.5"
                        android:textColor="@color/text_black"
                        android:textCursorDrawable="@null"
                        android:layout_below="@+id/shunlong_layout"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:text="如连续开6期“单”，继续选择“单”进行投注，这样的 投注方案称之为“顺龙”；"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <LinearLayout
                        android:id="@+id/beitou_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/icon_beitou"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_example"/>
                        <TextView
                            android:id="@+id/text_icon_beitou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/icon_example"
                            android:text="什么是倍投?"
                            android:textColor="@color/colorPrimary_500vip"
                            android:layout_marginLeft="10dp"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/beitou_explain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3dp"
                        android:lineSpacingMultiplier="1.5"
                        android:textColor="@color/text_black"
                        android:textCursorDrawable="@null"
                        android:layout_below="@+id/beitou_layout"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:text="倍投是指一种成倍的投注方式，是为保障能够在“斩 龙”或“顺龙”的过程中持续盈利的一种押注方式。"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <View
            android:id="@+id/explain_line"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/lll"
            android:background="#d4d4d4" />

        <RelativeLayout
            android:id="@+id/ll_zdl"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_zd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:text="我知道了"
                android:textColor="@color/colorPrimary_500vip"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
