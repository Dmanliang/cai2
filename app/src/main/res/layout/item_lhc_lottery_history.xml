<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_issue_num"
            style="@style/item_lottery_history"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/text_black"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp">

            <com.sp.caitwo.ui.view.WarpLinearLayout
                android:id="@+id/lottery_nums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:divider="@drawable/divide_space_dm5"
                app:grivate="center"
                app:horizontal_Space="2dp"
                app:isFull="false"
                app:vertical_Space="2dp"
                android:orientation="horizontal"
                android:padding="0dp"
                android:showDividers="middle"/>

            <com.sp.caitwo.ui.view.WarpLinearLayout
                android:id="@+id/lottery_names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:divider="@drawable/divide_space_dm5"
                app:grivate="center"
                app:horizontal_Space="2dp"
                app:isFull="false"
                app:vertical_Space="2dp"
                android:orientation="horizontal"
                android:padding="0dp"
                android:showDividers="middle"/>

        </LinearLayout>

        <FrameLayout style="@style/item_lottery_history"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_lottery_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/text_black"/>

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
