<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_issue_num"
            style="@style/item_lottery_history"
            android:textSize="12sp"
            android:textColor="@color/text_black"
            android:layout_weight="1" />

        <com.sp.caitwo.ui.view.WarpLinearLayout
            android:id="@+id/lottery_nums"
            style="@style/item_lottery_history"
            android:layout_weight="1.5"
            android:divider="@drawable/divide_space_dm5"
            app:grivate="center"
            app:horizontal_Space="2dp"
            app:isFull="false"
            app:vertical_Space="2dp"
            android:orientation="horizontal"
            android:padding="0dp"
            android:showDividers="middle"/>

        <LinearLayout
            android:id="@+id/lottery_nums2"
            style="@style/item_lottery_history"
            android:layout_weight="1.5"
            android:divider="@drawable/divide_space_dm5"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp"
            android:showDividers="middle"
            android:visibility="gone"/>

        <FrameLayout style="@style/item_lottery_history"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_lottery_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="@color/text_black"
                android:gravity="center" />
        </FrameLayout>

    </LinearLayout>
</RelativeLayout>
