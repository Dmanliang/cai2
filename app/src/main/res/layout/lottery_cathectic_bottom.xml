<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_lottery_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/cathectic_select_layout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/Grey_100"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/meizhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="每注"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/lottery_xiazhu"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@+id/meizhu"
            android:background="@drawable/shape_title_button"
            android:gravity="center"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="6"
            android:text="2"
            android:textColor="@color/red_gesture"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/lottery_xiazhu"
            android:text="元"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/maxmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="最高可中0元"
            android:textColor="@color/text_black"
            android:textSize="14dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cathectic_select_layout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/Grey_100"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/cathectic_total_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:text="共0注,0.00元"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/select_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:checkedButton="@id/select_money_rb1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/select_money_rb1"
                style="@style/rb_subordinate_manage"
                android:background="@drawable/whitebg2redbg_left_r2"
                android:text="元" />

            <RadioButton
                android:id="@+id/select_money_rb2"
                style="@style/rb_subordinate_manage"
                android:background="@drawable/whitebg2redbg_right_r2"
                android:text="角" />
        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cathectic_select_layout3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/Grey_100"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/divider" />

        <LinearLayout
            android:id="@+id/multiple_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bet1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/lottery_multiple"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@+id/bet1"
                android:background="@drawable/shape_title_button"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLength="6"
                android:text="1"
                android:textColor="@color/red_gesture"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/multiple1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/lottery_multiple"
                android:text="倍"
                android:textColor="@color/text_black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/issue_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/multiple_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/multiple"
                android:text="投"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/lottery_issue_num"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@+id/bet2"
                android:background="@drawable/shape_title_button"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLength="6"
                android:text="1"
                android:textColor="@color/red_gesture"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/lottery_issue_num"
                android:text="期"
                android:textColor="@color/text_black"
                android:textSize="14sp" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/checklayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/iszhuihao_checkbox"
                style="@style/MyCheckBox"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iszhuihao_checkbox"
                android:gravity="center"
                android:text="是否追停"
                android:textColor="@color/text_black"
                android:textSize="12dp" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_black"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lottery_machine_select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:gravity="center"
            android:padding="10dp"
            android:text="机选"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/lottery_totally"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+确认选号"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.sp.xwjlibrary.widget.DoubleTextView
            android:id="@+id/lottery_totally_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            app:oneColor="@color/big_double_yellow"
            app:oneSize="12"
            app:orientation="vertical"
            app:twoColor="@color/text_white" />

        <TextView
            android:id="@+id/lottery_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:background="@color/colorPrimary_500vip"
            android:gravity="center"
            android:text="确认投注"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
