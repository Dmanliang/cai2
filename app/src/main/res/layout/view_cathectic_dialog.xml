<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginRight="37dp"
        android:layout_marginLeft="37dp"
        android:background="@drawable/shape_pay_psd_error"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/cathectic_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投注确认"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical"
            android:layout_below="@+id/cathectic_dialog_title"
            android:layout_marginTop="26dp">
            <TextView
                android:id="@+id/cathectic_dialog_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="彩种名称:"
                android:textColor="@color/text_black"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/cathectic_dialog_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投注金额:"
                android:textColor="@color/text_black"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/cathectic_dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投注内容:"
                android:textColor="@color/text_black"
                android:textSize="14dp"
                android:ellipsize="end"
                android:maxEms="15"
                android:singleLine="true"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/divider"
            android:layout_above="@+id/bottom_layout"
            />
        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cathectic_dialog_clear"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="取消"
                android:textColor="@color/text_black"
                android:textSize="14dp"/>
            <View
                android:layout_width="0.1dp"
                android:layout_height="57dp"
                android:background="@color/divider"/>
            <TextView
                android:id="@+id/cathectic_dialog_ok"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="确认"
                android:textColor="@color/small_single_blue"
                android:textSize="14sp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
