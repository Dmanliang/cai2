<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <layer-list>
            <item android:right="-1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />

                    <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="0dp" android:topLeftRadius="2dp" android:topRightRadius="0dp" />

                    <stroke android:width="1px" android:color="@color/gray" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item android:right="-1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/light_red" />

                    <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="0dp" android:topLeftRadius="2dp" android:topRightRadius="0dp" />

                </shape>
            </item>
        </layer-list>
    </item>

</selector>